{% extends "base.html.twig" %}

{% block title %}
    inscription
{{ parent() }}
{% endblock %}
{% block body %}
<body class="inscription">
    


<h1>Plantarium</h1>



    <main>
    <div>
    
    {{form_start(form)}}
    <div>
    {{form_widget(form, {'attr': {'class': 'formDisplay'}}) }}
    </div>
        <div>
              <button class="button"type="submit">Valider</button>
        </div>
    {{form_end(form)}}
