<header>
    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
    {% if app.user.UserInfos %}
  <div class="user-info">
    <ul>
    {% if app.user.UserInfos.imageName %}
        
        <li class="profilPicHeader">
        <img src="{{ vich_uploader_asset(app.user.UserInfos, 'image') }}" class="profilePic"
            alt="{{ app.user.UserInfos.getFullName() }}" loading="lazy" class="rounded">
        
        </li>

        {% endif %}
    </ul>


    <div class="fullName">
        <li>
            <p>{{ app.user.UserInfos.getFirstName() }}</p>
        </li>
        <li>
            <p>{{ app.user.UserInfos.getLastName() }}</p>
        </li>
        </div>
        {% endif %}
    </div>

    {% if is_granted('ROLE_ADMIN') %}

    <div class="headerIcons">
        <ul>
            <li><a href="{{ path('admin.users.index') }}"><img
                        src="{{ asset('images/components/tabler_hexagon-letter-a.png') }}" width="50px" height="50"
                        alt=""></a></li>

            <li><a href="{{ path('editor.plants.index') }}"><img
                        src="{{ asset('images/components/tabler_hexagon-letter-e.png') }}" width="50px" height="50"
                        alt=""></a></li>
        </ul>
    </div>
    {% endif %}

    {% if is_granted('ROLE_EDITOR') %}
    <div class="headerIcons">
        <ul>
            <li><a href="{{ path('editor.plants.index') }}"><img
                        src="{{ asset('images/background/tabler_hexagon-letter-e.png') }}" width="50px" height="50"
                        alt=""></a></li>
        </ul>
    </div>

    {% endif %}
    

    <div class="disconnect">
        <ul>
            <li><a href="{{ path('app_logout') }}">Se d√©connecter</a></li>
        </ul>
    </div>
    {% else %}
    {% include "Layout/_loggin.html.twig" %}
    {% endif %}

</header>