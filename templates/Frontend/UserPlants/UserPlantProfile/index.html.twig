{% extends "base.html.twig" %}

{% block title %}
Mes plantes
{{ parent() }}
{% endblock %}
{% block body %}
<h1>Plantarium</h1>

<h2>Mes plantes</h2>

    {% if userPlants is empty %}
        <p>Vous n'avez aucune plantes d'enregistr√©es sur votre profil.</p>
    {% else %}
        <ul>
            {% for userPlant in userPlants %}
                <li>
                    {% if userPlant.plant %}
                        <img src="{{ vich_uploader_asset(userPlant.plant, 'image') }}" alt="{{ userPlant.plant.name }}" style="max-width: 200px; max-height: 200px;">
                      
                    {% else %}
                        <p>No image available</p>
                    {% endif %}
                    <p>{{ userPlant.plant.name }}</p>
                </li>
            {% endfor %}
        </ul>
    {% endif %}


{% endblock %}