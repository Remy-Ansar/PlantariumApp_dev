{% extends "base.html.twig" %}

{% block title %}
Administration des plantes
{{ parent() }}
{% endblock %}
{% block body %}

<h2>Rechercher une plante</h2>
<div class="wrap">
    <div class="searchBar">
        <input type="text" class="searchText" placeholder="Ficus Benjamina">
        <button type="submit" class="searchSubmit"></button>
    </div>
</div>


<main>
    <table>
        <thead>
            <tr>
                <th>Espèce</th>
                <th>Nom</th>
                <th>Description</th>
                <th>Photo</th>
            </tr>
        </thead>
        <tbody>

            {% for plant in plants %}
            <tr>

                <td>{{ plant.Species.Name }}</td>
                <td>{{ plant.Name }}</td>
                <td>{{ plant.description }}</td>
                <td><img src="{{ vich_uploader_asset( plant, 'image') }}" alt="{{ plant.Name }}" loading="lazy"
                        class="rounded" width="50px" height="50px"></td>
                <td>
                <td>
                    <form action="{{ path('users.plantarium.addPlant') }}" method="post">
                        <input type="hidden" name="plant_id" value="{{ plant.id }}">
                        <button type="submit">Ajouter cette plante à mon profil</button>
                    </form>
                </td>

                <td>
                    {# <form 
                    action="{{path('editor.plants.delete', {id: plant.id}) }}" 
                    method="POST" 
                    onsubmit="return confirm('Êtes-vous certain de vouloir supprimer cette plante de votre profil ? Cette action est irréversible')"
                    enctype="multipart/form-data">
                    <input type="hidden" name="token" value="{{ csrf_token('delete'~ plant.id) }}">
                    <button type="submit">Supprimer une plante</button>
            </form> #}
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</main>

{% endblock %}